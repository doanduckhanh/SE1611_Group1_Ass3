@page
@using SE1611_Group1_A3.Models
@model SE1611_Group1_A3.Pages.Shopping.CheckoutModel
@{
    var user = ViewData["user"] as User;
    var total = ViewData["Total"];
}
<body style="background-color: #FEFECC">
    <h1>Checkout</h1>

    <h4>Order</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="get">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label class="control-label">FirstName</label>
                    <input class="form-control" value="@user.FirstName" asp-for="@Model.FirstName"/>
                </div>
                <br />
                <div class="form-group">
                    <label class="control-label">LastName</label>
                    <input class="form-control" value="@user.LastName" asp-for="@Model.LastName" />
                </div>
                <div class="form-group">
                    <label class="control-label">Address</label>
                    <input class="form-control" value="@user.Address" asp-for="@Model.Address" />
                </div>
                <div class="form-group">
                    <label class="control-label">City</label>
                    <input class="form-control" value="@user.City" asp-for="@Model.City" />
                </div>
                <div class="form-group">
                    <label class="control-label">State</label>
                    <input class="form-control" value="@user.State" asp-for="@Model.State" />
                </div>
                <div class="form-group">
                    <label class="control-label">Country</label>
                    <input class="form-control" value="@user.Country" asp-for="@Model.Country" />
                </div>
                <div class="form-group">
                    <label class="control-label">Phone</label>
                    <input class="form-control"  value="@user.Phone" asp-for="@Model.Phone" />
                </div>
                <div class="form-group">
                    <label class="control-label">Email</label>
                    <input class="form-control" value="@user.Email" asp-for="@Model.Email" />
                </div>
                <div class="form-group">
                    <label class="control-label">Total</label>
                    <input class="form-control" value="@total" disabled/>
                </div>
                
            </form>
            <form method="post" asp-page-handler="save" class="form-group pt-3">
                    <input type="submit" value="Order" class="btn btn-primary" />
            </form>
        </div>
    </div>
</body>

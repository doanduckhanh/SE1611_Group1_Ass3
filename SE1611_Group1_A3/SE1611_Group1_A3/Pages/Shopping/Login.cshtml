@page
@model SE1611_Group1_A3.Shopping.LoginModel
@{
    ViewData["Title"] = "Login";
}
<body style="background-color: #FEFECC">
    <h1>Login</h1>

    <h4>User</h4>
    <p style="color: red"> @Model.Msg</p>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label class="control-label">Username</label>
                    <input class="form-control" asp-for="@Model.Username" required />
                </div>
                <br />
                <div class="form-group">
                    <label class="control-label">Password</label>
                    <input class="form-control" asp-for="@Model.Password" required />
                </div>
                <div class="form-group pt-3">
                    <input type="submit" value="Login" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</body>

